[
  {
    "modifier": ["Caps"],
    "rules": [
      {
        "key": "Caps",
        "rules": [
          {
            "condition": { "g_isVimShiftKeyDown": false },
            "when": { "S": "isDown" },
            "fire": [null, "Shift_u"]
          }
        ]
      },
      {
        "key": ["Shift", "S"],
        "set": {"g_isVimShiftKeyDown": "g_isKeyDown" },
        "fire": ["Shift_d", "Shift_u"]
      },
      {
        "key": ["H", "J", "L", "K"],
        "rules": [
          {
            "condition": { "g_isWinKeyDown": true },
            "fire": ["Ctrl_d vimArrowKey_du Ctrl_u", null]
          },
          {
            "key": ["H", "L"],
            "rules": [
              {
                "condition": {
                  "g_isAltKeyDown": true,
                  "g_isAltAsCtrl": true
                },
                "fire": ["_keyUpLAlt vimHomeEndKey_du _keyDownLAltAsLCtrl", null]
              }
            ]
          },
          {
            "condition": { "g_isAltKeyDown": true, "g_isAltAsCtrl": true },
            "fire": ["vimHomeEndKey_du", null]
          },
          {
            "fire": ["vimArrowKey_du", null]
          }
        ]
      }
    ]
  }
]
